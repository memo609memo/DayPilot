<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.notifications.NotificationsFragment"
        android:background="@color/backgroundColor">

    <EditText
            android:background="@drawable/rounded_edittext_corners"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:hint="Task Name"
            android:ems="10"
            android:id="@+id/editTaskName"/>

    <TextView
            android:background="@drawable/rounded_edittext_corners"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:text="Repeats: S M T W T F S"
            android:ems="10"
            android:id="@+id/repeatTextView"
            android:textSize="16dp"
    />







    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/repeatSunday"
            android:background="@drawable/togglebutton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="84dp"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/repeatMonday"
            android:background="@drawable/togglebutton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="84dp"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/repeatTuesday"
            android:background="@drawable/togglebutton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="119dp"
            android:layout_marginTop="84dp"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/repeatWednesday"
            android:background="@drawable/togglebutton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="134dp"
            android:layout_marginTop="84dp"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/repeatThursday"
            android:background="@drawable/togglebutton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="149dp"
            android:layout_marginTop="84dp"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/repeatFriday"
            android:background="@drawable/togglebutton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="163dp"
            android:layout_marginTop="84dp"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/repeatSaturday"
            android:background="@drawable/togglebutton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="177dp"
            android:layout_marginTop="84dp"
    />







    <TextView
            android:background="@drawable/rounded_edittext_corners"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text=""
            android:hint="start time"
            android:ems="10"
            android:id="@+id/startTimeTextView"
            android:textSize="18dp"/>
    <TextView
            android:background="@drawable/rounded_edittext_corners"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginStart="305dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text=""
            android:hint="end time"
            android:ems="10"
            android:id="@+id/endTimeTextView"
            android:textSize="18dp"/>
    <ImageButton
            android:src="@drawable/gear"
            android:background="@null"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/settingsButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
/>
    <ScrollView
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_width="340dp"
            android:layout_height="540dp"
            android:id="@+id/scrollView2"
            android:layout_below="@+id/settingsButton"
            android:layout_marginTop="80dp">
        <EditText
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/noteBody"/>
    </ScrollView>
    <ImageButton
            android:src="@drawable/microphone"
            android:background="@null"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/micButton"
            android:layout_below="@+id/scrollView2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="fitCenter"
    />

</RelativeLayout>